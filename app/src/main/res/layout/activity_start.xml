<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".StartActivity">

    <TextView
        android:textSize="22sp"
        android:id="@+id/appname_start"
        android:layout_centerInParent="true"
        android:textColor="@color/colorWhite1"
        android:text="@string/smart_medicine_assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView

        android:id="@+id/ic_alarm"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_above="@id/appname_start"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/alarm"
        android:padding="20dp"
        android:src="@drawable/ic_alarm" />

    <ProgressBar

        android:id="@+id/progress_bar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appname_start"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/colorWhite1"
        android:padding="20dp"
        tools:targetApi="lollipop" />

</RelativeLayout>